<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Active</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @roles.each_with_index do |role,index| %>
      <tr>
        <td scope="row"><%= index+1%></td>
        <td><%= best_in_place role, :name, :as => :input %></td>
        <td>
          <%= best_in_place role, :is_default, as: :checkbox, collection: {false: "in active", true: "active"} %>
        </td>
        <td><%= link_to 'Destroy', role, method: :delete,remote:true, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<script type="text/javascript">
  $(document).ready(function() {
    $(".best_in_place").best_in_place();
  });
</script>